package Factory;

public class DrivableFactory {
    
    public static final int C_CAR = 0;
    public static final int C_TRUCK = 1;
    
    public DrivableFactory() { }
    
    public Drivable makeDrivable(int iType) {
        switch (iType) {
            case 0:
                return new Car();
            case 1:
                return new Truck();
            default:
                return null;
        }
        
    }
    
    public Drivable makeDrivable(DrivableTypes iType) {
        switch (iType) {
            case CAR:
                return new Car();
            case TRUCK:
                return new Truck();
            default:
                return null;
        }
        
    }
    
}
